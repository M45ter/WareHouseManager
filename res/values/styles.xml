<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="common_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/common_font</item>
        <item name="android:paddingTop">@dimen/_5dp</item>
        <item name="android:paddingBottom">@dimen/_5dp</item>
        <item name="android:paddingLeft">@dimen/_15dp</item>
        <item name="android:paddingRight">@dimen/_15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="common_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_0.1dp</item>
        <item name="android:background">@color/view_color</item>
    </style>

    <style name="small_padding_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/common_font</item>
        <item name="android:paddingTop">@dimen/_5dp</item>
        <item name="android:paddingBottom">@dimen/_5dp</item>
        <item name="android:paddingLeft">@dimen/_5dp</item>
        <item name="android:paddingRight">@dimen/_5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="small_padding_red_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:paddingTop">@dimen/_5dp</item>
        <item name="android:paddingBottom">@dimen/_5dp</item>
        <item name="android:paddingLeft">@dimen/_5dp</item>
        <item name="android:paddingRight">@dimen/_5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="normal_title_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="small_drawable_btn_style">
        <item name="android:layout_width">@dimen/small_drable_size</item>
        <item name="android:layout_height">@dimen/small_drable_size</item>
        <item name="android:layout_marginLeft">@dimen/_5dp</item>
        <item name="android:layout_marginRight">@dimen/_5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/_5dp</item>
    </style>

    <style name="table_product_title_style" parent="small_padding_red_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:paddingTop">@dimen/_5dp</item>
        <item name="android:paddingBottom">@dimen/_5dp</item>
        <item name="android:paddingLeft">@dimen/_0dp</item>
        <item name="android:paddingRight">@dimen/_0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="page_info_style">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">@dimen/_3dp</item>
        <item name="android:paddingRight">@dimen/_3dp</item>
    </style>

    <style name="page_tv_click_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:paddingLeft">@dimen/_3dp</item>
        <item name="android:paddingRight">@dimen/_3dp</item>
    </style>

</resources>